<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="OK"
            android:id="@+id/ok_button"
            android:onClick="test"/>
    
        <LinearLayout
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Name"
                    android:id="@+id/name_contact"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/name_contact_edit"
                    android:background="@drawable/custom_edit_text"
                    android:paddingLeft="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:hint="Name"
                    />
            
            <TextView android:layout_gravity="center"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Number Phone"
                      android:id="@+id/number_contact"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Number"
                    android:id="@+id/number_contact_edit"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:layout_marginHorizontal="30dp"

                    android:background="@drawable/custom_edit_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Position"
                      android:id="@+id/position"
                      android:layout_gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Position"
                    android:background="@drawable/custom_edit_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Company"
                      android:id="@+id/company"
                      android:layout_gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="Name Company"
                    android:background="@drawable/custom_edit_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Mail"
                      android:id="@+id/mail"
                      android:layout_gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="Mail"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/custom_edit_text"/>
        </LinearLayout>


    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            tools:ignore="RtlHardcoded"
            android:src="@drawable/ic_phone_book"
            android:onClick="contactBook"
            android:id="@+id/contact_book"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>