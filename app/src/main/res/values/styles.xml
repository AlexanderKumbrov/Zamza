<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Light Mode. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#dfe4ea</item>
        <item name="textColor">#3d3d3d</item>
        <item name="buttonColor">#27ae60</item>
        <item name="toolBarColor">#00cec9</item>
        <item name="titleColor">#3d3d3d</item>

    </style>

    <style name="NightMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Night mode. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#05293b</item>
        <item name="textColor">#e7dfdf</item>
        <item name="buttonColor">#27ae60</item>
        <item name="toolBarColor">#031c29</item>
        <item name="titleColor">#f7f1e3</item>

    </style>


</resources>
