<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                        android:id="@+id/name_meeting"
                      android:textSize="40sp"
                      android:text="name"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="40sp"
                      android:id="@+id/place_meeting"
                      android:text="place"
            android:layout_below="@+id/name_meeting"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
            android:text="@string/meeting_through"
            android:layout_below="@+id/place_meeting"
            android:textSize="30sp"
            android:id="@+id/meeting_through"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/delete_meeting"
                    android:text="@string/delete"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_map"
                    android:text="@string/show_in_the_map"
                    android:layout_below="@+id/meeting_through"
                    android:layout_marginTop="75dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="28dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
