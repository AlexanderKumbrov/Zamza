<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
        >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                        android:id="@+id/name_meeting"
                      android:textSize="40sp"
                      android:text="@string/name"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="40sp"
                      android:id="@+id/place_meeting"
                      android:text="@string/place"
            android:layout_below="@+id/name_meeting"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:layout_below="@+id/place_meeting"
                    android:textSize="30sp"
                    android:id="@+id/meeting_date"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:layout_below="@+id/meeting_date"
                    android:textSize="30sp"
                    android:id="@+id/meeting_time"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/delete_meeting"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/delete"/>


            <ImageView
                    android:id="@+id/importance_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            android:src="@drawable/green_circle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
